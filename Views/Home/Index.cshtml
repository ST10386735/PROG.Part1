@{
    ViewData["Title"] = "";
}


<div>

</div>
<div class="grid">
    <div>
        <form>
            <h2>Customer Information</h2>
            <label for="customerID">Customer ID:</label>
            <input type="text" id="customerID" name="customerID"><br><br>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name"><br><br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email"><br><br>
            <label for="date">Date:</label>
            <input type="date" id="date" name="date"><br><br>
            <input type="submit" value="Submit">
        </form>
    </div>
    <div>
        <form>
            <h2>Monthly Claim Form</h2>
            <label for="contract-id">Contract ID:</label>
            <input type="text" id="contract-id" name="contract-id"><br><br>
            <label for="claim-date">Claim Date:</label>
            <input type="date" id="claim-date" name="claim-date"><br><br>
            <label for="claim-amount">Claim Amount:</label>
            <input type="number" id="claim-amount" name="claim-amount"><br><br>
            <label for="claim-description">Claim Description:</label>
            <textarea id="claim-description" name="claim-description"></textarea><br><br>
            <input type="submit" value="Submit Claim">
        </form>
    </div>
</div>
<style>
    html {
  font-size: 14px;
}

.btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
  box-shadow: 0 0 0 0.1rem black, 0 0 0 0.25rem #258cfb;
}

html {
  position: relative;
  min-height: 100%;
}

body {
  margin-bottom: 60px;
}

/* styles.css */

form {
    width: 400px;
    margin:auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h2 {
    margin-top: 0;
}

label {
    display: block;
    margin-bottom: 10px;
}

input[type="text"], input[type="email"], input[type="date"] {
    width: 100%;
    height: 40px;
    margin-bottom: 20px;
    padding: 10px;
    border: 1px solid #ccc;
}

input[type="submit"] {
    width: 100%;
    height: 40px;
    background-color: black;
    color: white;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

    input[type="submit"]:hover {
        background-color:dimgrey;
    }
.grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-gap: 10px;
    padding: 20px;
}
</style>
